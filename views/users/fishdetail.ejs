<%- include('../partials/header') %>
<header>
    <h1><%= title %></h1><br>
</header>
<main>
    <div id = "smallfishcard"class="card shadow p-4" style="width: 35rem;">
        <img id= "fishimg" src="<%= fish.imageUrl %>" class="card-img-top" alt="fish-image">
        <div class="card-body">
            <h1 class="card-title"><%= fish.species %></h1>
            <h3 class="card-text"><%= fish.description %></h3>
        </div>
        <div id="addtotank">
            <form action="/users/profile/fishcollection/<%= fish._id %>/edit" method="GET">
                <button class="btn btn-warning"type="submit">Behavioral Problems?</button>
            </form>
            <form action="/users/profile/fishcollection" method="GET">
              <button class="btn btn-dark" type="submit">Return To Your Collection</button>
            </form>
        </div>     
    </div>

<%- include('../partials/footer') %>
