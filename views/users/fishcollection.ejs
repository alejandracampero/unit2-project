<%- include('../partials/header') %> 
<header>
    <h1><%= title %> </h1>
    <form action="/users/profile" method="GET">
        <button class="btn btn-success" type="submit">Return To Your Profile</button>
    </form>  
</header>
<% user.fishcollection.forEach((f)=>{ %>
    <div class="card text-center shadow p-3 mb-5 bg-white rounded m-3" style="width: 18rem;">
        <img src="<%= f.imageUrl %>" class="card-img-top" alt="fish-img">
        <div class="card-body">
            <h5 class="card-title"><%= f.species %></h5>
        </div>
        <form action="/users/profile/fishcollection/<%= f._id %>" method="GET">
            <button type="submit">Details</button>
        </form>
        <form action="/users/profile/fishcollection?_method=DELETE" method="POST">
            <input type="text" hidden name="fishid" value="<%= f._id %>">
            <button type="submit">Give<%= f.species %> up to a good family</button>
        </form>
    </div>   
<% }) %> 

<%- include('../partials/footer') %> 