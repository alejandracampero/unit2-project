<%- include('../partials/header') %> 
    <h1>Hello <%= user.name %>!</h1><br>
    <h4>Live Stock</h4>
    
<ul>
  <main>
    <% fish.forEach((f)=>{ %>
        <div class="card shadow p-3" style="width: 25rem;">
            <img src="<%= f.imageUrl %>" class="card-img-top" alt="fish-img">
            <div class="card-body">
                <h2 class="card-title"><%= f.species %></h2><br>
                 <p class="card-text"><%= f.description %></p><br>
                <h4 class="card-text">Care Level: <%= f.care %></h4>
                <h4 class="card-text">Min Tank Size: <%= f.tankSize %></h4>
                <% if(fish.Ownedby && fish.Ownedby.includes(user._id)){ %>
                    <h5>You have this little guy in your tank already</h5>
                <% } else { %>
                <form action="/users/profile/fishcollection" method="POST">
                    <input hidden name="fishcollection" value="<%=f._id%>">
                    <button class="btn btn-success" type="submit" >Add to my Tank</button>
                </form>
                <% } %>
            </div>
        </div>
        <br>
    <% }) %> 
</main>
</ul>
<%- include('../partials/footer') %> 